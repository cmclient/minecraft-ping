{
    "name": "minecraft-server-ping",
    "version": "0.3.0",
    "description": "Minecraft server status",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "doc": "typedoc",
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "lint": "eslint src",
        "test": "c8 mocha",
        "coverage": "c8 report --reporter=lcovonly"
    },
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "enable-source-maps": true,
        "require": [
            "ts-node/register"
        ],
        "loader": "ts-node/esm",
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mharj/minecraft-ping.git"
    },
    "keywords": [
        "minecraft",
        "ping",
        "typescript"
    ],
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.7.1",
        "@stylistic/eslint-plugin-ts": "^2.7.1",
        "@tsconfig/node16": "^16.1.3",
        "@types/chai": "^4.3.19",
        "@types/chai-as-promised": "^8.0.0",
        "@types/dotenv": "^8.2.0",
        "@types/mocha": "^10.0.7",
        "@types/node": "^16.18.106",
        "@types/node-int64": "^0.4.32",
        "@types/varint": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "c8": "^10.1.2",
        "chai": "^5.1.1",
        "chai-as-promised": "^8.0.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-sonarjs": "^0.23.0",
        "mocha": "^10.7.3",
        "prettier": "^3.3.3",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "tsup": "^8.2.4",
        "typedoc": "^0.26.6",
        "typescript": "^5.5.4"
    },
    "author": "mharj",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mharj/minecraft-ping/issues"
    },
    "homepage": "https://github.com/mharj/minecraft-ping#readme",
    "dependencies": {
        "@avanio/logger-like": "^0.2.0",
        "@luolapeikko/result-option": "^0.6.6",
        "varint": "^6.0.0"
    }
}
